#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, TIMEOUT) \
combo_##NAME { \
	bindings = <BINDINGS>; \
	timeout-ms = <TIMEOUT>; \
	key-positions = <KEYPOS>; \
	layers = <LAYERS>; \
};

#define COMBO_TERM_FAST 20
#define COMBO_TERM_NORMAL 30
#define COMBO_TERM_SLOW 40

/ {
    combos {
		compatible = "zmk,combos";

		// functions
		COMBO(redo,		&kp LC(Y),		 3  4, 		DEF NUM, COMBO_TERM_NORMAL)
		COMBO(undo,		&kp LC(Z),		13 14, 		DEF NUM, COMBO_TERM_NORMAL)

		// common symbols 
		COMBO(at,       UK_AT,       	 1  2,  	DEF NUM, COMBO_TERM_NORMAL)
		COMBO(dqt,      UK_DQT,      	 7  8,		DEF NUM, COMBO_TERM_NORMAL)
